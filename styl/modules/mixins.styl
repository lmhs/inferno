fill()
  position: absolute
  width: 100%
  height: 100%

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

noUserSelect()
  -webkit-user-select: none
  -moz-user-select: none
  user-select: none

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
  background-color startColor
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

// ----------------------------------
// @Fonts
// ----------------------------------

sansFallback = 'PT Sans', Arial, sans-serif

baseFont()
  font-family: 'Open Sans', sansFallback
  font-weight: normal

boldFont()
  font-family: 'Whitney-Semibold', sansFallback
  font-weight: normal

bookFont()
  font-family: 'Whitney-Book', sansFallback
  font-weight: normal

mediumFont()
  font-family: 'Whitney-Medium', sansFallback
  font-weight: normal

lightFont()
  font-family: 'Whitney-Light', sansFallback
  font-weight: normal

mediumItalicFont()
  font-family:'Whitney-MediumItalic', sansFallBack
  font-weight: normal

