{prefix}-main
  position: absolute
  width: 90.9%
  height: 100%

  &-wrapper
    position: absolute
    width: 110%
    height: 100%
    left: 0
    top: 0
    transition: transform duration.transition ease

  &-backdrop
    &-wrapper
      position: absolute
      right: -5%
      top: 0
      width: skewWidth
      height: 100%
      z-index: depth.pageMainBackdropWrapper
      transition: transform duration.transition ease

      +media-sm()
        right: -30%

      +media-md()
        right: -25%

      +media-lg()
        right: -10%

      +media-xl()
        right: -5%

    &-top
    &-bottom
      fill()
      width: 100%
      height: 100%
      background-size: 100% 100%
      background-position: center center

    &-bottom
      background-image: url(svgPath + 'trapeze_bottom_black.svg')
      opacity: .3
    
    &-top
      background-image: url(svgPath + 'trapeze_top_black.svg')
      opacity: .1
      right: -8%
      transition: transform duration.transition ease