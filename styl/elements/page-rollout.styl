{prefix}-rollout
  fill()
  boldFont()
  right: 0
  background-image: url(imgPath + 'city.jpg')
  background-size: cover
  background-position: center
  width: 100%
  height: 100%

  &-wrapper
    position: absolute
    height: 100%
    width: 35%
    right: 0
    top: 0
    transform: translateX(100%)
    transition: transform duration.transition ease
    z-index: depth.pageRollout

  &-shape
    position: absolute
    left: -1px
    top: 0
    width: 414px
    height: 100%
    background-size: 100% 100%
    background-position: center center
    background-image: url(svgPath + 'triangle_top_white.svg')
    z-index: depth.pageRollout
    pointer-events: none

  &-content
    position: absolute
    right: 20%
    top: 0
    bottom: 0
    margin: auto
    width: 215px
    height: 190px
    text-align: right
    color: colors.lightText

  h1
  h2
    margin: 0
    line-height: 1.4em

  p
    bookFont()
    font-size: fontSize.rolloutDesc
    margin-top: 30px
    color: colors.textAccentSubtle
    
.dedicated-rollout
  background-image: url(imgPath + 'new-york.jpg')


@media only screen and (min-width: 1350px) and (max-width: 1600px)
  .page-rollout-content
    right: 9%

@media only screen and (min-width: 2200px) and (max-width: 2700px)
  .page-rollout-wrapper
    width: 45%
  .page-rollout-content
    right: 34%

@media only screen and (min-width: 1600px) and (max-width: 2200px)
  .page-rollout-wrapper
    width: 44%