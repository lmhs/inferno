{prefix}-header
  position: absolute
  width: 100%
  top: 30px
  z-index: depth.pageHeader

  .is-logo-small
    opacity: 0
    visibility: hidden
    width: 150px

    img
      float: left

  .is-logo
  .is-logo-small
    position: absolute
    left: 0
    top: 0
    margin-left: 30px
    transition: opacity duration.transition ease,
      visibility duration.transition ease

  &-title
    boldFont()
    text-indent: 2px
    font-size: 20px
    line-height: 15px
    float: left
    color: #222

  &-options
    boldFont()
    font-size: fontSize.base
    position: absolute
    top: -12px
    right: 30px
    padding: 0
    border-radius: 3px
    line-height: 18px
    color: #fff

    &-lang
    &-login
    &-basket
      position: relative
      float: right
      cursor: pointer

      &:hover
        opacity: .8

    &-lang
      text-transform: uppercase
      margin-top: 1px

      &:after
        content: ''
        position: absolute
        bottom: -1px
        right: -5px
        width: 0px
        height: 0px
        border-style: solid
        border-width: 0 0 5px 5px
        border-color: transparent transparent #fff transparent

    &-login
      @extend .icon-exit-sm
      margin-left: 26px

    &-basket
      display: block
      position: relative
      color: colors.darkText
      margin-right: 20px
      padding-left: 30px
      background: url("../img/header-basket.png") no-repeat 0 0

      &:hover
        color: colors.darkText

      .prod-count
        background: colors.accent
        padding: 0 8px 1px
        border-bottom: 1px solid colors.darkElement
        position: relative

        &:after
          content: ''
          border-style: solid
          border-width: 10px 10px 0 0
          border-color: transparent colors.accent transparent
          transform: scaleY(-1)
          position: absolute
          left: -5px
          top: 7px