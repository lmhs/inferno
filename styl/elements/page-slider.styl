{prefix}-slider
  position: absolute
  height: 100%
  width: 110%

  &-controls
    boldFont()
    font-size: fontSize.base
    font-weight: bold
    color: #fff
    position: absolute
    left: 30px
    bottom: 60px
    height: 20px

  &-control
    margin-right: 4px
    width: 10px
    transition: color duration.transition ease
    cursor: pointer

    &.active
      color: colors.accent

{prefix}-slide
  fill()
  opacity: 0
  visibility: hidden
  pointer-events: none
  background-size: cover
  background-position: left center
  background-repeat: repeat
  transition: opacity duration.slider ease,
    visibility duration.slider ease

  &.active
    opacity: 1
    visibility: visible

  &-caption
    position: absolute
    width: inherit
    left: 0
    transition: transform duration.transition ease,
      opacity duration.transition ease

    & .text-small
      opacity: .7
      margin-top: 45px
      line-height: 24px

    &-wrapper
      mediumFont()
      font-size: fontSize.subHeader
      color: colors.lightText
      position: absolute
      width: 320px
      height: 200px
      margin: auto
      top: -2%
      bottom: 0
      left: -11%
      right: 0

      &.dark
        color: #222
  .sub-line
    display: inline-block
    margin-left: 11px

