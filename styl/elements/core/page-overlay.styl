{prefix}-overlay
  fill()
  z-index: depth.pageOverlay

  &-wrapper
    position: absolute
    right: -130%
    top: 0
    width: 100%
    height: 100%
    z-index: depth.pageOverlayWrapper
    transition: transform duration.transition ease

  &-outer
    position: absolute
    width: 90%
    height: 100%
    right: 0
    top: 0
    background: colors.background
    overflow: scroll
    overflow-x: hidden
    padding-left: 200px

  &-shape
    position: absolute
    left: (skewWidth / 4 * -1 + 0.08)
    top: 0
    width: (skewWidth / 2)
    height: 100%
    background-size: 100% 100%
    background-position: center center
    background-color: transparent
    background-image: url(svgPath + 'triangle_bottom_white.svg')
    pointer-events: none