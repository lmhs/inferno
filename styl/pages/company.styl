.business .icon-side:before
  content: ''
  position: absolute
  left: -33px
  @extend .icon-logo-yellow-sm

{prefix}-company
  position: relative
  height: 396px
  width: 1470px
  margin-left: 3%
  overflow: hidden
  background: url(imgPath + 'company_banner.png')
  background-position: top center
  background-size: cover
  box-shadow: inset 0 -8px 0 colors.accent
  bottom: 5px

  &:before,
  &:after
    position: absolute
    content: ''
    top: 0
    width: 0
    height: 0
    border-style: solid

  &:before
    left: -1px
    border-color: colors.background transparent transparent transparent
    border-width: 421px 200px 0px 0px

  &:after
    right: -1px
    border-color: transparent transparent colors.background transparent
    border-width: 0px 0px 458px 250px


.news-and-partners
  position: relative
  clearfix()
  .news
    width: 460px
