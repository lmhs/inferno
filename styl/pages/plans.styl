  .add-order-pricing
    margin-left: 900px

@media only screen and (min-width: 2000px)
  .add-order-pricing 
    margin-left: 1050px


.pay-methods a:visited
  color: colors.link


.show-plas-price
  display: block


.page-menu.page-menu-secondary
  display: none


