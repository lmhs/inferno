html,
body
  width: 100%
  height: 100%

a
  outline: 0 !important
  text-decoration: none
  color: colors.link
  cursor: pointer
  &:hover
    color: colors.link + #333
    text-decoration: underline
  &:visited
    color: colors.link

h1
  boldFont()
  font-size: fontSize.header

h2
  mediumFont()
  font-size: fontSize.subHeader

h3
  boldFont()
  font-size: fontSize.smallHeader

hr
  border: 0
  background-linear-gradient(left, colors.separator, 0%, colors.background, 100%);
  margin: 25px 0
  height: 1px

  &.stick-bottom
    margin-bottom: 0

input
  outline: none

ol
  counter-reset: item

ol > li 
  text-indent: -2em
  list-style-type: none
  counter-increment: item

ol > li:before 
  display: inline-block
  width: 1em
  padding-right: 0.5em
  font-weight: bold
  text-align: right
  content: counter(item) "."

body
  baseFont()
  font-size: fontSize.base
  color: colors.darkText
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale


.accent-color
  color: colors.accent

.text-large
  fontBold()
  font-size: 40px

.text-small
  bookFont()
  font-size: 16px

.one-menu-item
  line-height: 20px !important

.white
  color: white !important
  position: relative
  &:after
    content: ""
    position: absolute
    bottom: -1px
    right: -5px
    width: 0px
    height: 0px
    border-style: solid
    border-width: 0px 0px 5px 5px
    border-color: transparent transparent white !important